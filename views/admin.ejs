<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Upload</title>
  <style>
    body {
      font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
      margin: 0;
      background: #f7f8fa;
      color: #222;
    }
    h1 {
      text-align: center;
      margin-top: 2rem;
      font-size: 2.2rem;
      font-weight: 700;
      letter-spacing: -1px;
    }
    form {
      max-width: 400px;
      margin: 2rem auto;
      padding: 2rem 2.5rem;
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 2px 16px rgba(0,0,0,0.07);
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
    }
    label {
      font-weight: 600;
      margin-bottom: 0.2rem;
    }
    input[type="text"], select, input[type="file"] {
      padding: 0.7rem;
      font-size: 1rem;
      border: 1px solid #e0e0e0;
      border-radius: 0.5rem;
      background: #f7f8fa;
      transition: border 0.2s;
    }
    input[type="text"]:focus, select:focus, input[type="file"]:focus {
      border: 1.5px solid #a0a0a0;
      outline: none;
    }
    button {
      padding: 0.9rem;
      background: #222;
      color: white;
      border: none;
      border-radius: 0.5rem;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.2s, transform 0.2s;
      margin-top: 0.5rem;
    }
    button:hover {
      background: #444;
      transform: translateY(-2px) scale(1.03);
    }
    p[style] {
      margin: 0.5rem 0 0 0;
      font-size: 1rem;
    }
    @media (max-width: 600px) {
      form {
        padding: 1.2rem;
      }
    }
  </style>
</head>
<body>
  <h1>Upload a Photo</h1>
  <div style="max-width:400px;margin:0 auto 1.5rem auto;display:flex;gap:1rem;justify-content:center;">
    <a href="/" style="
      background: #eee;
      color: #222;
      font-weight: 600;
      border-radius: 0.5rem;
      padding: 0.5rem 1.2rem;
      text-decoration: none;
      box-shadow: 0 1px 4px rgba(0,0,0,0.04);
      transition: background 0.2s;
      display: inline-block;
    ">Go to Homepage</a>
    <a href="/logout" style="
      background: #eee;
      color: #222;
      font-weight: 600;
      border-radius: 0.5rem;
      padding: 0.5rem 1.2rem;
      text-decoration: none;
      box-shadow: 0 1px 4px rgba(0,0,0,0.04);
      transition: background 0.2s;
      display: inline-block;
    ">Logout</a>
  </div>
  <form action="/upload" method="POST" enctype="multipart/form-data">
    <label for="image">Choose an image:</label>
    <input type="file" name="image" id="image" required>

    <% if (categories.length > 0) { %>
      <label for="category">Select a category:</label>
      <select name="category" id="category" required>
        <% categories.forEach(cat => { %>
          <option value="<%= cat %>"><%= cat %></option>
        <% }); %>
      </select>
    <% } else { %>
      <p style="color: red;">No categories found. Please create a folder in <code>public/images</code> first.</p>
    <% } %>

    <button type="submit" <%= categories.length === 0 ? 'disabled' : '' %>>Upload</button>
  </form>
</body>
</html>
